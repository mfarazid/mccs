.col-xs-12.col-sm-9
  %section.club_info_box
    %span= link_to '<i class="fa fa-arrow-circle-left"></i> Back'.html_safe, clubs_path, :class => "btn btn-default pull-left"
    %span= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_club_path(@club), :class => 'btn btn-default pull-right' 
    %figure= image_tag "clubs/#{@club.club_flag.file_name}", :class => 'flag_small'
    %h4= @club.name
    %p= @club.county

  %section.box.box-default
    .box-header 
      %h3.box-title Teams     
    .box-body
      / .table-responsive 
      /   %table.table.table-bordered.table-condensed{id: 'clubs'}
      /     %thead.club_head
      /       %tr
      /         %th Name
      /         %th County
      /         %th User
      /         %th

          
      /     %tbody
      /       - @clubs.each do |club|
      /         %tr
      /           %td #{image_tag "clubs/#{club.club_flag.file_name}", :class => 'flag_icon'} &nbsp; #{link_to "#{club.name}", club}
      /           %td= club.county
      /           %td= club.user.name
      /           %td
      /             = link_to '<i class="fa fa-edit"></i>'.html_safe, edit_club_path(club), :class => 'btn btn-sm btn-flat btn-default'
      /             = link_to '<i class="fa fa-trash-o"></i>'.html_safe, club, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-flat btn-default'

= render 'sidenavbar'  
