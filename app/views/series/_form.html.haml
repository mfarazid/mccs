= bootstrap_form_for @series do |f|
  - if @series.errors.any?
    #error_explanation
      %h2= "#{pluralize(@series.errors.count, "error")} prohibited this series from being saved:"
      %ul
        - @series.errors.full_messages.each do |msg|
          %li= msg

  .field
    / = f.label :name
    = f.text_field :name
  .field
    / = f.label :start_date
    = f.datetime_select :start_date
  .field
    / = f.label :end_date
    = f.datetime_select :end_date
  .actions
    = f.submit 'Save'
