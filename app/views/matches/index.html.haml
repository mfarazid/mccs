.wrapper.row-offcanvas.row-offcanvas-left
  / Left side column. contains the logo and sidebar
  %aside.left-side.sidebar-offcanvas
    = render 'sidenavbar'
  / Right side column. Contains the navbar and content of the page
  %aside.right-side
    %header.row
      %section.jumbotron.top-header
        %figure
          = image_tag 'logo.png', :alt => "logo", :class => "header_image_responsive" 
    %section.content-header     
      %h1 Home
      %ol.breadcrumb
        %li
          %a{:href => root_path}
            %i.fa.fa-home 
            Home   
        %li.active
          %a{:href => matches_path}
            %i.fa.fa-maxcdn
            Matches
    / /.content-header
    %section.content
      .box.box-default
        .box-header
          %h3.box-title Matches      
        .box-body  
          .table-responsive 
            %table.table.table-bordered.table-condensed{id: 'umpires'}
              %thead.umpire_head
                %tr
                  %th Competition
                  %th Competition type
                  %th Series
                  %th Venue
                  %th Team won toss
                  %th Team choose to
                  %th Start date
                  %th Competition overs
                  %th
              %tbody    
                - @matches.each do |match|
                  %tr
                    %td #{match.team_a.name} vs #{match.team_b.name}
                    %td= match.competition_type.name
                    %td= match.series.name
                    %td= match.venue.name
                    %td= match.team_won_toss
                    %td= match.team_choose_to
                    %td= match.start_date
                    %td= match.competition_overs_limit.overs
                    %td
                      = link_to 'Show', match
                      = link_to 'Destroy', match, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br 
