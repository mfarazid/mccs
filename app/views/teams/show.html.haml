.wrapper.row-offcanvas.row-offcanvas-left
  / Left side column. contains the logo and sidebar
  %aside.left-side.sidebar-offcanvas
    = render 'sidenavbar'
  / Right side column. Contains the navbar and content of the page
  %aside.right-side
    %header.row
      %section.jumbotron.top-header
        %figure
          = image_tag 'logo.png', :alt => "logo", :class => "header_image_responsive" 
    %section.content-header     
      %h1 Home
      %ol.breadcrumb
        %li
          %a{:href => root_path}
            %i.fa.fa-home
            Home    
        %li.active
          %a{:href => teams_path}
            %i.fa.fa-flag
            Teams
    / /.content-header
    %section.content
      .club_info_box
        %figure= image_tag "teams/#{@team.team_flag.file_name}", :class => 'flag_small'   
        %h3 #{@team.name} (#{@team.city}) 
        %h5 #{image_tag "clubs/#{@team.club.club_flag.file_name}", :class => 'flag_icon'} &nbsp; #{link_to "#{@team.club.name}", club_path(@team.club.id), :title => "View club"} 

      .box.box-default
        .box-header 
          %h3.box-title Players     
        .box-body
          -if @team.players.exists?
            .table-responsive
              %table.table.table-bordered.table-striped
                %thead.player_head
                  %tr
                    %th Picture
                    %th Name
                    %th Age
                    %th Title
                    %th Played for
                    %th Batting style
                    %th Bowling style
                    - if current_user.present? && @team.players.select {|c| c.user_id == current_user.id}
                      %th
                %tbody
                  - @team.players.each do |player|
                    %tr
                      - if player.picture_url?
                        %td= image_tag player.picture_url, :class => "player_pic_small"
                      - else
                        %td= image_tag "player_default_pic.png", :class => "player_pic_small"
                      %td= link_to "#{player.name}", player, :title => "View player" 
                      %td= player.age(player.date_of_birth) if player.date_of_birth?
                      %td= player.player_type.name
                      %td= player.team.name
                      %td= player.player_batting_style
                      %td= player.player_bowling_style.name
                      - if current_user.present? && player.user_id == current_user.id
                        %td= link_to '<i class="fa fa-trash-o"></i>'.html_safe, player, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-flat btn-default', :title => "Remove player"
      %p 
        = link_to '<i class="fa fa-arrow-circle-left"></i>'.html_safe, teams_path, :class => "btn btn-default", :title => "Back to teams"                 
      %br
      %br    
