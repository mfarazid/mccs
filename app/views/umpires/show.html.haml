.wrapper.row-offcanvas.row-offcanvas-left
  / Left side column. contains the logo and sidebar
  %aside.left-side.sidebar-offcanvas
    = render 'sidenavbar'
  / Right side column. Contains the navbar and content of the page
  %aside.right-side
    %header.row
      %section.jumbotron.top-header
        %figure
          = image_tag 'logo.png', :alt => "logo", :class => "header_image_responsive" 
    %section.content-header     
      %h1 Home
      %ol.breadcrumb
        %li
          %a{:href => root_path}
            %i.fa.fa-home
            Home    
        %li.active
          %a{:href => umpires_path}
            %i.ion.ion-android-contacts
            Umpires
    / /.content-header
    %section.content
      .box.box-default
        .box-header
          %h3.box-title Umpire Details      
        .box-body  
          .table-responsive 
            %table.table.table-bordered.table-striped
              %thead.umpire_head
                %tr
                  %th First Name
                  %td= @umpire.first_name
                %tr
                  %th Last Name
                  %td= @umpire.last_name
          %br
          %hr        
          - if current_user.present? && @umpire.user_id == current_user.id
            = link_to '<i class="fa fa-fw fa-arrow-circle-left"></i>'.html_safe, umpires_path, :class => "btn btn-default", :title => "Back to umpires" 
            = link_to '<i class="fa fa-edit"></i>'.html_safe, edit_umpire_path(@umpire), :class => 'btn btn-flat btn-default', :title => "Edit umpire" 
      %br
