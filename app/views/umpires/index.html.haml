.wrapper.row-offcanvas.row-offcanvas-left
  / Left side column. contains the logo and sidebar
  %aside.left-side.sidebar-offcanvas
    = render 'sidenavbar'
  / Right side column. Contains the navbar and content of the page
  %aside.right-side
    %header.row
      %section.jumbotron.top-header
        %figure
          = image_tag 'logo.png', :alt => "logo", :class => "header_image_responsive" 
    %section.content-header     
      %h1 Home
      %ol.breadcrumb
        %li
          %a{:href => root_path}
            %i.fa.fa-home
            Home    
        %li.active
          %a{:href => umpires_path}
            %i.ion.ion-android-contacts
            Umpires
    / /.content-header
    %section.content
      .box.box-default
        .box-header
          .pull-right.box-tools
            = link_to 'New Umpire', new_umpire_path, :class => 'btn btn-success btn-flat pull-right'
          %h3.box-title Umpires      
        .box-body  
          .table-responsive 
            %table.table.table-bordered.table-condensed{id: 'umpires'}
              %thead.umpire_head
                %tr
                  %th
                  %th First name
                  %th Last name
                  - if current_user.present? && @umpires.select {|c| c.user_id == current_user.id}
                    %th
              %tbody    
                - @umpires.each do |umpire|
                  %tr
                    %td.center= link_to '<i class="ion ion-android-contact"></i>'.html_safe, umpire, :title => "View umpire" 
                    %td= umpire.first_name
                    %td= umpire.last_name
                    - if current_user.present? && umpire.user_id == current_user.id
                      %td.center
                        = link_to '<i class="fa fa-edit"></i>'.html_safe, edit_umpire_path(umpire), :class => 'btn btn-xs btn-flat btn-default', :title => "Edit umpire" 
                        = link_to '<i class="fa fa-trash-o"></i>'.html_safe, umpire, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-flat btn-default', :title => "Remove umpire" 
      %br  

