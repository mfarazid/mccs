.wrapper.row-offcanvas.row-offcanvas-left
  / Left side column. contains the logo and sidebar
  %aside.left-side.sidebar-offcanvas
    = render 'sidenavbar'
  / Right side column. Contains the navbar and content of the page
  %aside.right-side
    %header.row
      %section.jumbotron.top-header
        %figure
          = image_tag 'logo.png', :alt => "logo", :class => "header_image_responsive" 
    %section.content-header     
      %h1 Home
      %ol.breadcrumb
        %li
          %a{:href => root_path}
            %i.fa.fa-home
            Home    
        %li.active
          %a{:href => venues_path}
            %i.fa.fa-umbrella
            Venues
    / /.content-header
    %section.content
      .box.box-default
        .box-header
          %h3.box-title Venue Details      
        .box-body  
          .table-responsive 
            %table.table.table-bordered.table-strip
              %thead.venue_head
                %tr
                  %th Name
                  %td= @venue.name
                %tr
                  %th Address
                  %td= @venue.address
                %tr
                  %th City
                  %td= @venue.city
                %tr
                  %th County or State
                  %td= @venue.county_or_state                    
                %tr
                  %th Country
                  %td= @venue.country
          %br
          %hr        
          - if current_user.present? && @venue.user_id == current_user.id
            = link_to '<i class="fa fa-fw fa-arrow-circle-left"></i>'.html_safe, venues_path, :class => "btn btn-default", :title => "Back to venues" 
            = link_to '<i class="fa fa-edit"></i>'.html_safe, edit_venue_path(@venue), :class => 'btn btn-flat btn-default', :title => "Edit venue" 
      %br
