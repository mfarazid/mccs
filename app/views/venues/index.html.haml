.wrapper.row-offcanvas.row-offcanvas-left
  / Left side column. contains the logo and sidebar
  %aside.left-side.sidebar-offcanvas
    = render 'sidenavbar'
  / Right side column. Contains the navbar and content of the page
  %aside.right-side
    %header.row
      %section.jumbotron.top-header
        %figure
          = image_tag 'logo.png', :alt => "logo", :class => "header_image_responsive" 
    %section.content-header     
      %h1 Home
      %ol.breadcrumb
        %li
          %a{:href => root_path}
            %i.fa.fa-home
            Home    
        %li.active
          %a{:href => venues_path}
            %i.fa.fa-umbrella
            Venues
    / /.content-header
    %section.content
      .box.box-default
        .box-header
          .pull-right.box-tools
            = link_to 'New Venue', new_venue_path, :class => 'btn btn-success btn-flat pull-right'
          %h3.box-title Venues      
        .box-body  
          .table-responsive 
            %table.table.table-bordered.table-condensed{id: 'venues'}
              %thead.venue_head
                %tr
                  %th Name
                  %th Address
                  %th City
                  %th County or state
                  %th Country
                  - if current_user.present? && @venues.select {|c| c.user_id == current_user.id}
                    %th
              %tbody    
                - @venues.each do |venue|
                  %tr
                    %td= venue.name
                    %td= venue.address
                    %td= venue.city
                    %td= venue.county_or_state
                    %td= venue.country
                    - if current_user.present? && venue.user_id == current_user.id
                      %td
                        = link_to '<i class="fa fa-edit"></i>'.html_safe, edit_team_path(venue), :class => 'btn btn-xs btn-flat btn-default', :title => "Edit venue" 
                        = link_to '<i class="fa fa-trash-o"></i>'.html_safe, venue, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-flat btn-default', :title => "Remove venue" 
      %br  
